// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
  "name": "Docker ROS Example - Containerized Development Environment - ROS 2 Humble",
  "dockerComposeFile": [
    "../../docker-compose.yml"
  ],
  "service": "ros2humble",
  "workspaceFolder": "/home/dev/Stage/",
  "postCreateCommand": "bash .devcontainer/dependencies.sh && echo 'source /opt/ros/humble/setup.bash' >> ~/.bashrc",
  "postStartCommand": "bash .devcontainer/build.sh",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      // Uncomment the next line to install VS Code extensions.
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "cschlosser.doxdocgen",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "tomoki1207.pdf"
      ]
    }
  }
}